@model EmployeeManagement.Models.Employee;
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>

    <h3 class="text-center">Edit Employee</h3>
    <form asp-action="EditEmployee" asp-controller="Employee" asp-route-id=@Model.EmployeeId method="post">
        @*<input type="hidden" asp-for="EmployeeId" />*@
        <div class="form-group">
            <label for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Enter Name" required>
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label for="Surname">Name</label>
            <input asp-for="Surname" type="text" class="form-control" id="Surname" placeholder="Enter Surname" required>
            <span asp-validation-for="Surname" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label for="Address">Address</label>
            <textarea asp-for="Address" class="form-control" id="Address" required></textarea>
            <span asp-validation-for="Address" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label for="Mobilenumber">Mobile number</label>
            <input asp-for="Contactnumber" type="number" class="form-control" id="Mobilenumber" placeholder="Enter Mobilenumber" required>
            <span asp-validation-for="Contactnumber" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label for="Department">Name</label>
            <select asp-for="Department.Department_name">
                @foreach (var item in @ViewBag.Departments)
                {
                    <option>@item.Department_name</option>

                }
            </select><br />
            
            <input type="submit" value="Update" class="btn btn-primary" />

        </div>
        <div asp-validation-summary="All" class="text-danger"></div>





    </form>
</body>
</html>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}