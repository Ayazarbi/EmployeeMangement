@model EmployeeManagement.Models.RoleModel;
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Create Roles</title>
</head>
<body>

    <div class="container">
        <h4 class="bg-success text-white text-center p-2">Create Role</h4>
        <form asp-action="CreateRole" asp-controller="Administration" method="post">
            <div class="form-group">
                <label for="RoleName">RoleName</label>
                <input asp-for="RoleName" type="text" class="form-control" id="RoleName" placeholder="Enter Email">
                <span asp-validation-for="RoleName" class="alert-danger"></span>
            </div>

            <div>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            <div asp-validation-summary="All" class="border-danger text-danger"></div>

        </form>
    </div>
</body>
</html>